<html>
    <head>
        <title>Livraria</title>

         <link href="https://fonts.googleapis.com/css?family=Boogaloo|Handlee|Luckiest+Guy|Rubik&display=swap" rel="stylesheet">

       

        <style>

            body{
               text-align: center;
               background-image: url("data:image/jpeg;base64,"); 
               background-size:100% 100%;
            }

            h1{
                font-family: Boogaloo;
                text-align: center;
                font-size: 40pt;
                padding:20px;
                border-bottom: 1px solid black;
                color: black;
            }


            img{
                width:300px; /* largura da imagem em 300 pixel */
                height:280px; /* altura da imagem em 280 pixel */
                margin:20px; /* margem ao redor das imagens */
                opacity: 0.6; /* efeito de transparência em 60% */
                transition: ease 0.5s; /* efeito de animação para o aparecimento da imagem*/
            }
            img:hover{
                opacity: 1; /*totalmente visível*/
                cursor: pointer;
            }

            footer{
                background-color: #ccc;
                /*
                vamos colocar a posição do footer como 
                fixa no rodapé
                */
                position: fixed;
                bottom: 0px;/*colocar na parte inferior da tela*/
                /*vamos esticar o rodapé colocando em 100% de largura*/
                width: 100%;
                padding-top: 20px;
                padding-bottom: 20px;
            }

            div{
               
                width: 380px;
                float: left;
            }

            a{
                /*retirar o underline dos links*/
                text-decoration: none;/*none ->nenhum*/
                font-family: Rubik;
                color:black;
                font-size:12pt;
                transition: ease 1s;
            }

            a:hover{
                color:orange;
                margin-left: 20px;

            }
              footer{
                background-color: rgba(255, 255, 255, 0.5);
                padding-top:1px;
                padding-bottom: 1px;
                text-align: center;
                font-family: Rubik;
                position: fixed;
                bottom: 0px;
                width: 100%;
            }


        </style>


    </head>
    <body>
        <!-- Dividir a página em 3 partes. Sendo:
            cabeçalho -> header
            corpo|principal -> main
            rodapé -> footer
         -->
         <header>
             <h1>Livraria </h1>
         </header>
         <main>
             
             <div>
             <img src="~/img/cliente.jpg"> <br>
             @Html.ActionLink("Cliente","Index","Cliente")
             </div>
             

             <div>
             <img src="~/img/produtos.jpg"> <br>
             @Html.ActionLink("Produto","Index","Produto")
             </div>
             
             <div>
             <img src="~/img/venda1.jpg"> <br>
             @Html.ActionLink("Venda","Index","Venda")
             </div>
             
             <div>
             <img src="~/img/detalhes.jpg"> <br>
             @Html.ActionLink("Detalhe","Index","Detalhe")
             </div>
         </main>
         <footer>
             <h3> © Copyright - Todos os direitos reservados - Por Caroline Souza</h3> 
         </footer>
    </body>
</html>